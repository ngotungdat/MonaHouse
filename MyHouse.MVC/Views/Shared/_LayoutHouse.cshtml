@using Sample.Utilities;
@using MyHouse.MVC.Controllers;
@{
    string token = Context.Session.GetString("token");
    string domain = Context.Session.GetString("domain");
    if (string.IsNullOrEmpty(token))
    {
        Context.Response.Redirect(Url.Action("Login", "Login"));
    }
    Users users = await BaseController.GetCurrentUserAsync(token, domain);
    if (users == null)
    {
        Context.Response.Redirect(Url.Action("Login", "Login"));
    }
    PartialModel partialModel = new PartialModel() { Token = token, Domain = domain, MyProperty = users };
}

