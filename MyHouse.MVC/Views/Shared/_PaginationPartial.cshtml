<span class="span-row-page"><b>0/Trang</b></span>
<nav aria-label="Page navigation text-right" class="page-nav">
    <ul class="pagination mg-b-0"></ul>
</nav>
<span class="span-totalrow"><b>Tổng cộng: 0</b></span>
<script>
    $(function () {
        load_page(pagination(1, 20), 1, 20);
    });

    function pagination(c, m) {
        var current = c,
            last = m,
            delta = 2,
            left = current - delta,
            right = current + delta + 1,
            range = [],
            rangeWithDots = [],
            l;

        for (let i = 1; i <= last; i++) {
            if (i == 1 || i == last || i >= left && i < right) {
                range.push(i);
            }
        }

        for (let i of range) {
            if (l) {
                if (i - l === 2) {
                    rangeWithDots.push(l + 1);
                } else if (i - l !== 1) {
                    rangeWithDots.push('...');
                }
            }
            rangeWithDots.push(i);
            l = i;
        }

        return rangeWithDots;
    }

    function load_page(pag, p, t) {
        $('.span-totalrow').html('<b>Tổng cộng: ' + 1900 + '</b>');
        $('.span-row-page').html('<b>' + 20 + '/Trang</b>');
        $('.pagination').html('');
        if (p != 1) {
            let back = p - 1;
            $('.pagination').append('<li class="page-item">');
            $('.pagination').append('<a class="page-link-icon" onclick="load_data_page(' + back + ')" href="javascript:;"> <<');
            $('.pagination').append('</a>');
            $('.pagination').append('</li>');
        }
        for (let i of pag) {
            if (i == '...') {
                $('.pagination').append('<li class="page-item span-totalrow">...</a></li>');
            }
            else if (i == p) {
                $('.pagination').append('<li class="page-item active"><a class="page-link" onclick="load_data_page(' + i + ')" href="javascript:;">' + i + '</a></li>');

            } else {
                $('.pagination').append('<li class="page-item"><a class="page-link" onclick="load_data_page(' + i + ')" href="javascript:;">' + i + '</a></li>');
            }
        }
        if (p != t) {
            let next = p + 1;
            $('.pagination').append('<li class="page-item">');
            $('.pagination').append('<a class="page-link-icon" onclick="load_data_page(' + next + ')" href="javascript:;"> >>');
            $('.pagination').append('</a>');
            $('.pagination').append('</li>');
        }
    }
    function load_data_page(val) {
        load_page(pagination(val, 20), val, 20);
    }
</script>