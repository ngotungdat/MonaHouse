<nav aria-label="Page navigation text-right" class="page-nav">
    <ul class="pagination mg-b-0"></ul>
</nav>
<span class="span-totalrow"><b>Tổng cộng: 0</b></span>
<script>
    function pagination(c, m) {
        var current = c,
            last = m,
            delta = 2,
            left = current - delta,
            right = current + delta + 1,
            range = [],
            rangeWithDots = [],
            l;

        for (let i = 1; i <= last; i++) {
            if (i == 1 || i == last || i >= left && i < right) {
                range.push(i);
            }
        }

        for (let i of range) {
            if (l) {
                if (i - l === 2) {
                    rangeWithDots.push(l + 1);
                } else if (i - l !== 1) {
                    rangeWithDots.push('...');
                }
            }
            rangeWithDots.push(i);
            l = i;
        }
        return rangeWithDots;
    }

    function load_pagination(_pagination, _pageindex, _totalpage, _totalitem) {
        $('.span-totalrow').html('<b>Tổng cộng: ' + _totalitem + '</b>');
        $('.pagination').html('');
        if (_pageindex != 1) {
            let back = _pageindex - 1;
            $('.pagination').append('<li class="page-item"><a class="page-link" onclick="load_to_page(' + back + ')" href="javascript:;"> Prev </a></li>');
        }
        for (let i of _pagination) {
            if (i == '...') {
                $('.pagination').append('<li class="page-item span-totalrow">...</a></li>');
            }
            else if (i == _pageindex) {
                $('.pagination').append('<li class="page-item active"><a class="page-link" onclick="load_to_page(' + i + ')" href="javascript:;">' + i + '</a></li>');

            } else {
                $('.pagination').append('<li class="page-item"><a class="page-link" onclick="load_to_page(' + i + ')" href="javascript:;">' + i + '</a></li>');
            }
        }
        if (_pageindex != _totalpage) {
            let next = _pageindex + 1;
            $('.pagination').append('<li class="page-item"><a class="page-link" onclick="load_to_page(' + next + ')" href="javascript:;"> Next </a></li>');
        }
    }
</script>